<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/customborder"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/productImageDesc"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/product_image"
        android:orientation="vertical"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/productPriceDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/cuprum_bold"
            android:text="200 RS."
            android:textColor="@color/splashColor" />

        <com.google.android.material.chip.Chip
            android:id="@+id/productDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/dark_blue" />
    </LinearLayout>

    <TextView
        android:id="@+id/productTitleDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/cuprum_bold"
        android:gravity="left"
        android:maxLines="1"
        android:paddingBottom="10dp"
        android:text="@string/product_title"
        android:textColor="#2F3A10"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>