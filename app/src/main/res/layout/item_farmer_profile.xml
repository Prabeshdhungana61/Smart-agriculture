<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2,3,4,5,6,7">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_order_id"
                android:fontFamily="@font/cuprum_bold"
                android:padding="10dp"
                android:text="ID"
                android:textColor="#232121"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_order_title"
                android:fontFamily="@font/cuprum_bold"
                android:padding="10dp"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_order_bemail"
                android:fontFamily="@font/cuprum_bold"
                android:padding="10dp"
                android:text="B.Email"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_order_bname"
                android:fontFamily="@font/cuprum_bold"
                android:padding="10dp"
                android:text="B.Name"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_order_bstock"
                android:fontFamily="@font/cuprum_bold"
                android:padding="10dp"
                android:text="B.Stock"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_order_price"
                android:fontFamily="@font/cuprum_bold"
                android:padding="10dp"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_order_done"
                android:fontFamily="@font/cuprum_bold"
                android:padding="10dp"
                android:text="Completed"
                android:textColor="#0C0C0C"
                android:textSize="14sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

</LinearLayout>