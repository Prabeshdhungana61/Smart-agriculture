<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            app:srcCompat="@drawable/ic_image"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_smart_agriculture"
            />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cuprum_bold"
            android:text="Smart Agriculture"
            android:textColor="#0B0A0A"
            android:textSize="20sp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/splashColor"
            android:layout_marginTop="10dp"
            />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nav_agro_news"
            android:gravity="center|left"
            android:text="Agriculture News"
            android:textColor="@color/black"
            android:layout_marginRight="150dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cuprum_bold"
            app:icon="@drawable/ic_news" />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nav_daily_vegetable_market"
            android:gravity="center|left"
            android:text="Daily Vegetable Market"
            android:textColor="@color/black"
            android:layout_marginRight="150dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cuprum_bold"
            app:icon="@drawable/ic_money" />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nav_logout"
            android:gravity="center|left"
            android:text="Logout"
            android:textColor="@color/black"
            android:layout_marginRight="150dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cuprum_bold"
            app:icon="@drawable/ic_login" />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nav_login"
            android:gravity="center|left"
            android:text="Login"
            android:textColor="@color/black"
            android:layout_marginRight="150dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cuprum_bold"
            app:icon="@drawable/ic_login" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darkGreen"
            android:layout_marginTop="10dp"
            />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nav_about_us"
            android:gravity="center|left"
            android:text="About Us"
            android:textColor="@color/black"
            android:layout_marginRight="140dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/cuprum_bold"
          />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nav_share_app"
            android:gravity="center|left"
            android:text="Share App"
            android:textColor="@color/black"
            android:layout_marginRight="150dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/cuprum_bold"
            />





    </LinearLayout>

</LinearLayout>