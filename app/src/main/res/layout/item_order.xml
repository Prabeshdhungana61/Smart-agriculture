<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/customborder2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_order_productTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cuprum_bold"
        android:gravity="center"
        android:text="Corriender"
        android:textColor="#040303"
        android:textSize="16sp" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#696E5C" />

    <TextView
        android:id="@+id/item_order_sellerEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/cuprum_bold"
        android:gravity="start"
        android:text="Seller Contact: aprashant21@tbc.edu.np"
        android:textColor="#151515"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_order_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/cuprum_bold"
        android:gravity="end"
        android:text="2022/01/10"
        android:textColor="#231B1B"
        android:textSize="14sp" />


</LinearLayout>